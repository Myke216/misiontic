@page
@model ProyectoCiclo3.App.Frontend.Pages.FormBusModel
@{
    var bus = Model.Bus;
}
 
<div class="text-center" >
<form method="POST">
  
  <label for="marca" class="form-label">Marca:</label>
  <input type="text" class="form-control" placeholder="Marca" asp-for="Bus.marca">
  <span class="text-danger" asp-validation-for="Bus.marca"></span>
  <label for="modelo" class="form-label">Modelo:</label>
  <input type="number" class="form-control" id="modelo" asp-for="Bus.modelo" placeholder="Modelo">
  <label for="kilometraje" class="form-label">Kilometraje:</label>
  <input type="text" class="form-control" id="kilometraje" asp-for="Bus.kilometraje" placeholder="Kilometraje">
  <label for="numero de asientos" class="form-label">Numero de asientos:</label>
  <input type="number" class="form-control" id="numero_asientos" asp-for="Bus.numero_asientos" placeholder="Numero de asientos">
  <label for="placa" class="form-label">Placa:</label>
  <input type="text" class="form-control" id="placa" asp-for="Bus.placa" placeholder="Placa">
  <hr>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
</div>