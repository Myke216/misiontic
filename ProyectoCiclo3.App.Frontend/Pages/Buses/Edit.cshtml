@page
@model ProyectoCiclo3.App.Frontend.Pages.EditBusModel
@{
    var bus = Model.Bus;
}
 
 
<div class="text-center">
<form action="">
  <label for="id" class="form-label">Id:</label>
  <input type="number" class="form-control" id="id" name="id" placeholder="Id" asp-for="@bus.id>
  <label for="marca" class="form-label">Marca:</label>
  <input type="number" class="form-control" id="marca" name="marca" placeholder="Marca" asp-for="@bus.marca>
  <label for="modelo" class="form-label">Modelo:</label>
  <input type="number" class="form-control" id="modelo" name="modelo" placeholder="Modelo" asp-for="@bus.modelo>
  <label for="kilometraje" class="form-label">Kilometraje:</label>
  <input type="text" class="form-control" id="kilometraje" name="kilometraje" placeholder="Kilometraje" asp-for="@bus.kilometraje>
  <label for="numero de asientos" class="form-label">Numero de asientos:</label>
  <input type="number" class="form-control" id="numero de asientos" name="numero de asientos" placeholder="Numero de asientos" asp-for="@bus.numero_asientos>
  <label for="placa" class="form-label">Placa:</label>
  <input type="text" class="form-control" id="placa" name="placa" placeholder="Placa" asp-for="@bus.placa>
  <hr>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
</div>